<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-1.0.xsd">

    <bean id="testEventListenerOsgi" class="org.motechproject.event.osgi.TestEventListnerOsgi"/>

    <osgi:reference id="eventListenerRegistry" interface="org.motechproject.event.listener.EventListenerRegistryService" />
    <bean id="eventAnnotationBeanPostProcessor" class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor">
        <property name="eventListenerRegistry" ref="eventListenerRegistry" />
    </bean>
</beans>