<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
            http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <context:annotation-config />
    <context:component-scan base-package="org.motech.location" />

    <osgi:reference id="couchDbManager" interface="org.motechproject.commons.couchdb.service.CouchDbManager" />

    <bean id="locationRepositoryDatabaseConnector" factory-bean="couchDbManager"
        factory-method="getConnector">
        <constructor-arg value="location-repository" />
    </bean>

    <bean class="org.motechproject.event.listener.annotations.EventAnnotationBeanPostProcessor"/>

    <osgi:service id="locationRepositoryServiceOsgi" auto-export="interfaces" ref="locationRepositoryServiceImpl"
                  interface="org.motech.location.repository.service.LocationRepositoryService"/>

    <osgi:service id="locationIdentifierServiceOsgi" auto-export="interfaces" ref="locationIdentifierServiceImpl"
                  interface="org.motech.location.repository.service.LocationIdentifierService"/>

</beans>